<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:layout_height="wrap_content"
    tools:context=".Profil">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="4dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="14dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="1800px">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/about"
                />
            <TextView
                android:id="@+id/Judul"
                android:text="TENTANG APLIKASI "
                android:padding="10dp"
                android:textColor="#000"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"

                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/versi"
                android:text="Versi 1.0.0 "
                android:padding="10dp"
                android:textColor="#000"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"

                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/keteranganapp"
                android:text="Fit Your Weight adalah aplikasi penghitung BMI berdasarkan rumus Brocha dengan Fitur Kalkulator Hitung BMI , Penyakit yang ditimbulkan oleh BMI yang kurang ideal maupun sebaliknya.   Serta menampikan tips sesuai dengan Berat badan yang dimiliki pengguna."
                android:padding="10dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
             android:textAlignment="gravity"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>








        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>