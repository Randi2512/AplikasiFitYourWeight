<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:layout_height="wrap_content"
    tools:context=".Profil">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="4dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="14dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="1800px">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/user"
                />
            <TextView
                android:id="@+id/Judul"
                android:text="Profil Developer"
                android:padding="10dp"
                android:textColor="#000"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="26dp"

                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <TextView
                android:id="@+id/detail_keterangan"
                android:padding="15dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:text="Nama     : Randi \nKampus : Politeknik Negeri Padang\nJurusan : Teknologi Informasi"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/kontak"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>